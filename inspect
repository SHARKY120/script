-- Sharky Super Lite GUI Gift Inspector ‚Äì Fastest Version

local player = game.Players.LocalPlayer
local gui = player:WaitForChild("PlayerGui")

-- Hapus GUI lama
local old = game.CoreGui:FindFirstChild("SharkyGiftInspectorLite")
if old then old:Destroy() end

-- Buat ScreenGui
local screenGui = Instance.new("ScreenGui", game.CoreGui)
screenGui.Name = "SharkyGiftInspectorLite"
screenGui.ResetOnSpawn = false
screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Scrollable Panel
local scroll = Instance.new("ScrollingFrame", screenGui)
scroll.Size = UDim2.new(0, 500, 0, 300)
scroll.Position = UDim2.new(0, 10, 0, 10)
scroll.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
scroll.BackgroundTransparency = 0.2
scroll.BorderSizePixel = 0
scroll.CanvasSize = UDim2.new(0, 0, 0, 0)
scroll.AutomaticCanvasSize = Enum.AutomaticSize.Y
scroll.ScrollBarThickness = 8
scroll.ClipsDescendants = true

local layout = Instance.new("UIListLayout", scroll)
layout.SortOrder = Enum.SortOrder.LayoutOrder
layout.Padding = UDim.new(0, 3)
layout.VerticalAlignment = Enum.VerticalAlignment.Bottom

-- Fungsi buat line
local function addLine(text, color)
	local label = Instance.new("TextLabel", scroll)
	label.Size = UDim2.new(1, -10, 0, 18)
	label.BackgroundTransparency = 1
	label.Font = Enum.Font.Code
	label.TextSize = 14
	label.TextXAlignment = Enum.TextXAlignment.Left
	label.Text = text
	label.TextColor3 = color or Color3.new(1, 1, 1)
end

-- Scan frame hadiah saja
local function scanGift(frame)
	addLine("üéÅ GiftFrame: " .. frame.Name, Color3.fromRGB(255, 255, 0))

	for _, obj in ipairs(frame:GetDescendants()) do
		local text = obj.Name .. " [" .. obj.ClassName .. "]"
		if obj:IsA("TextLabel") or obj:IsA("TextButton") then
			text = text .. " | Text: " .. (obj.Text or "[?]")
		elseif obj:IsA("ImageLabel") or obj:IsA("ImageButton") then
			text = text .. " | Image: " .. (obj.Image or "[?]")
		end
		addLine("  " .. text)
	end

	addLine("------")
end

-- Pantau hanya Gift GUI
gui.ChildAdded:Connect(function(child)
	if child:IsA("ScreenGui") or child:IsA("Frame") then
		task.wait(0.1)
		if child:FindFirstChild("GiftFrame") or child.Name:lower():find("gift") then
			scanGift(child)
		end
	end
end)

addLine("‚úÖ Sharky Inspector Aktif - Pantau Gift Saja (Ultra Ringan)")
